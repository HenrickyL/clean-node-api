// @filename: tsconfig.json
{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "CommonJS",
        "target": "ES2019",
        "esModuleInterop": true,
        "allowJs": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "@~/*": ["./src/*"],
            "@protocols/*": ["./src/presentation/protocols/*"],
            "@errors/*": ["./src/presentation/v/*"]
        }
    }
}